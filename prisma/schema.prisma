generator client {
  provider = "prisma-client"
  output   = "../src/generated"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// Modelos

model Test {
  id String @id @default(uuid())
  name String @default("Test")
}

model Cliente {
  id String @id @default(uuid())
  name String 
  cuit String @unique
  domicilio String
  telefono String
  email String
  is_active Boolean @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now())

  propuestas PropuestaTecnica[]
}

model Servicio {
  id String @id @default(uuid())
  name String 
  description String
  type ServiceType @default(mensual)
  is_active Boolean @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now())

  itemsOnServicios ItemsOnServicios[]
  propuestas PropuestaTecnica[]
}

model Items {
  id String @id @default(uuid())
  name String
  description String
  is_active Boolean @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now())

  servicios ItemsOnServicios[]

}

model ItemsOnServicios {

  servicio Servicio @relation(fields: [servicioId], references: [id])
  servicioId String

  item Items @relation(fields: [itemId], references: [id])
  itemId String
  assignedAt DateTime @default(now())

  @@id([servicioId, itemId])
}

model PropuestaTecnica {
  id String @id @default(uuid())
  codigo String @unique
  cliente Cliente @relation(fields: [clienteId], references: [id])
  clienteId String
  servicios Servicio @relation(fields: [servicioId], references: [id])
  servicioId String
  vigencia DateTime?
  status PropuestaStatus @default(pendiente)
  items String[]
  valor Decimal @default(0)
  moneda Moneda @default(ARS)
  contacto   String?
  is_active Boolean @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now())


}


// ENUM 

enum PropuestaStatus {
  pendiente
  aprobada
  rechazada
  en_progreso
  finalizada
}
  
enum Moneda {
  ARS
  USD
  EUR
}

enum ServiceType {
  mensual
  unitario
}